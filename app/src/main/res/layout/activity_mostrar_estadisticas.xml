                android:textSize="15dp" />

            <TextView
                android:id="@+id/textViewGol"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/textView22"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gol penati: "
                android:textSize="15dp" />

            <TextView
